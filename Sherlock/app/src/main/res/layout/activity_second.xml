<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.root.sherlock.SecondActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите правильный ответ"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_below="@id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioCrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="onRadioClick"
            android:text="Ворона" />

    </RadioGroup>

    <RadioButton
        android:id="@+id/radioCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioClick"
        android:text="Кот Васька"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignRight="@+id/radioGroup1"
        android:layout_alignEnd="@+id/radioGroup1"
        android:layout_marginTop="37dp" />

    <RadioButton
        android:id="@+id/radioDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioClick"
        android:text="Сраный пёсик"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignLeft="@+id/radioCat"
        android:layout_alignStart="@+id/radioCat" />

</RelativeLayout>
